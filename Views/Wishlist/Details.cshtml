@model NorthPoleGiftSystem.Models.WishlistModel.WishlistDetail

@{
    ViewData["Title"] = "Wishlist Details";
}

<style>
    h1,
    h4,
    dl,
    dt,
    dd,
    table,
    th,
    td,
    a {
        font-family: 'Comic Sans MS', sans-serif;
        color: white;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: white;
    }

    .table th,
    .table td {
        padding: 0.75rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
    }

    .table thead th {
        vertical-align: bottom;
        border-bottom: 2px solid #dee2e6;
    }

    .table tbody+tbody {
        border-top: 2px solid #dee2e6;
    }

    .btn-default {
        background-color: #007bff;
        color: white;
    }

    .btn-default:hover {
        background-color: #0056b3;
    }
</style>

<h1>Wishlist Details</h1>
<div>
    <h4>Wishlist Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WishlistName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WishlistName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ElfID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ElfID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastUpdated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastUpdated)
        </dd>
    </dl>
    <h4>Gifts</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Gift ID</th>
                <th>Gift Name</th>
                <th>Gift Description</th>
                <th>Workshop ID</th>
                <th>Production Status</th>
                <th>Last Updated</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gift in Model.Gifts)
            {
                <tr>
                    <td>@gift.GiftID</td>
                    <td>@gift.GiftName</td>
                    <td>@gift.GiftDescription</td>
                    <td>@gift.WorkshopID</td>
                    <td>@gift.ProductionStatus</td>
                    <td>@gift.LastUpdated</td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a asp-action="Edit" asp-route-id="@Model.WishlistID" class="btn btn-default">Edit</a> |
        <a asp-action="Index" class="btn btn-default">Back to List</a>
    </p>
</div>
