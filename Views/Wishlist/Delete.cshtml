@model NorthPoleGiftSystem.Models.WishlistModel.WishlistDetail

@{
    ViewData["Title"] = "Delete Wishlist";
}

<style>
    h1,
    h3,
    h4,
    form,
    label,
    dl,
    dt,
    dd,
    input,
    a {
        font-family: 'Comic Sans MS', sans-serif;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-default {
        background-color: #007bff;
        color: white;
    }

    .btn-default:hover {
        background-color: #0056b3;
    }
</style>

<h1>Delete Wishlist</h1>
<h3>Are you sure you want to delete this wishlist?</h3>
<div>
    <h4>Wishlist Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WishlistName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WishlistName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ElfID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ElfID)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.WishlistID" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-default">Back to List</a>
    </form>
</div>
