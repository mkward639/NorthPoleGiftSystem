@model NorthPoleGiftSystem.Models.WorkshopModel.WorkshopDetail

@{
    ViewData["Title"] = "Delete Workshop";
}

<style>
    h1,
    hr,
    h4,
    dl,
    dt,
    dd,
    form,
    input,
    div,
    a,
    button {
        font-family: 'Comic Sans MS', sans-serif;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-default {
        background-color: #007bff;
        color: white;
    }

    .btn-default:hover {
        background-color: #0056b3;
    }
</style>

<h1>Delete Workshop</h1>
<hr />

<div>
    <h4>Are you sure you want to delete this workshop?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>

        <dt class="col-sm-2">
            Workshop Capacity
        </dt>
        <dd class="col-sm-10">
            @Model.WorkshopCapacity
        </dd>

        <dt class="col-sm-2">
            Supervisor ID
        </dt>
        <dd class="col-sm-10">
            @Model.SupervisorID
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="WorkshopID" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-default">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
