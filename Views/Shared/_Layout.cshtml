<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NorthPoleGiftSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NorthPoleGiftSystem.styles.css" asp-append-version="true" />

    <style>
        body {

            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            height: 100%;
            margin: 0;
        }

        .navbar {
            background-color: red;
            margin-bottom: 20px;
        }

        .content {
            text-align: center;
            font-family: 'Comic Sans MS', sans-serif;
            color: #ff0000;
            margin-bottom: 20px;
        }

        .display-4 {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 20px;
            background-color: red;
            color: #ffffff;
            padding: 10px;
        }

        .navbar-nav .nav-link {
            font-family: 'Comic Sans MS', sans-serif;
            font-size: 18px;
            margin-right: 15px;
        }

        .footer {
            width: 100%;
            position: absolute;
            bottom: 0;
        }

        .image-container {
            width: 17%;
            display: flex;
            margin-bottom: 0px;
            position: absolute;
            top: 0;
            right: 0;
        }

        .image-container img {
            width: auto;
            height: auto;
            max-height: 800px;
            filter: grayscale(30%)
        }

        .gif-container {
            text-align: center;
            background-color: transparent;
        }

        .gif-container img {
            max-width: 20%;
            height: 150%;
        }
    </style>

</head>

<body class="bg-success text-white">
    <div id="app" class="container text-center">
        <header class="mb-4">
            <div class="content">
                <h1 class="display-4 rounded">Welcome to the North Pole Gift System</h1>
            </div>
        </header>

        <div class="image-container">
            <img src="https://i.natgeofe.com/k/dfc7bec2-0657-4887-81a7-6d024a8c3f70/WH-XmasTree_4x3.jpg"
                alt="Christmas Tree Image">
        </div>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Elf" asp-action="Index">Elves</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Workshop"
                                asp-action="Index">Workshops</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Wishlist"
                                asp-action="Index">Wishlists</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Gift" asp-action="Index">Gifts</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - NorthPoleGiftSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <div class="gif-container">
        <img src="https://media3.giphy.com/media/nFBaiqny3Jll2JOOOW/giphy.gif" alt="GIF Image">
    </div>
</body>

</html>
