@model NorthPoleGiftSystem.Models.Gift.GiftDetail

<h2>Edit Gift</h2>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="GiftID" />

    <div class="form-group">
        <label asp-for="GiftName" class="control-label"></label>
        <input asp-for="GiftName" class="form-control" />
        <span asp-validation-for="GiftName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GiftDescription" class="control-label"></label>
        <textarea asp-for="GiftDescription" class="form-control"></textarea>
        <span asp-validation-for="GiftDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WorkshopID" class="control-label"></label>
        <input asp-for="WorkshopID" class="form-control" />
        <span asp-validation-for="WorkshopID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductionStatus" class="control-label"></label>
        <input asp-for="ProductionStatus" class="form-control" />
        <span asp-validation-for="ProductionStatus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastUpdated" class="control-label"></label>
        <input asp-for="LastUpdated" class="form-control" disabled />
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Details" asp-route-id="@Model.GiftID">Back to Details</a>
</div>
