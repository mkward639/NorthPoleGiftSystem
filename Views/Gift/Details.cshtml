@model NorthPoleGiftSystem.Models.Gift.GiftDetail

@{
    ViewData["Title"] = "Gift Details";
}

<style>
    h2,
    h4,
    form,
    label,
    dl,
    dt,
    dd,
    input,
    a {
        font-family: 'Comic Sans MS', sans-serif;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-default {
        background-color: #007bff;
        color: white;
    }

    .btn-default:hover {
        background-color: #0056b3;
    }
</style>

<h2>Gift Details</h2>

<div>
    <h4>Gift Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GiftName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GiftName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GiftDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GiftDescription)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkshopID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkshopID)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductionStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductionStatus)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastUpdated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastUpdated)
        </dd>
    </dl>

    <p>
        <a asp-action="Edit" asp-route-id="@Model.GiftID" class="btn btn-default">Edit</a> |
        <a asp-action="Index" class="btn btn-default">Back to List</a>
    </p>
</div>
