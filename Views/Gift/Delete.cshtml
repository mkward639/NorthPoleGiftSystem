@model NorthPoleGiftSystem.Models.Gift.GiftDetail

<h2>Delete Gift</h2>

<div>
    <h4>Are you sure you want to delete this gift?</h4>
    <div>
        <h4>Gift Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GiftName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GiftName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GiftDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GiftDescription)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.WorkshopID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WorkshopID)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductionStatus)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductionStatus)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastUpdated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastUpdated)
            </dd>
        </dl>

        <form asp-action="DeleteConfirmed" asp-route-id="@Model.GiftID" method="post">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-default">Back to List</a>
        </form>
    </div>
</div>
